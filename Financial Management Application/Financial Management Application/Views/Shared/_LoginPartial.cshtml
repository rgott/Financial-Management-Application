@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right mobileNav pull-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@User.Identity.GetUserName()@* <span class="caret"></span>*@</a>
                <ul class="dropdown-menu" style="padding-bottom:0; background-color:white" role="menu">
                    <li>@Html.ActionLink("Request products", "RequestTransaction", "Transaction")</li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li style="margin-top:1px; border-top:3px solid #428BCA">
                        <button type="button" style="border-right:1px solid #333" class="btn btnSqr" onclick="location.href='@Url.Action("Index", "Manage")';return false;">Manage</button>
                        <button type="button" class="btn btnSqr" href="javascript:document.getElementById('logoutForm').submit()">Log Out</button>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register Request", "RegisterRequest", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
