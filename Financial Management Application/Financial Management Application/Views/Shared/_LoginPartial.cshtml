@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right mobileNav pull-right" style="z-index:3; display:flex;">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@User.Identity.GetUserName()@* <span class="caret"></span>*@</a>
                <ul class="dropdown-menu login-panel" style="" role="menu">
                    <li>@Html.ActionLink("Request products", "RequestTransaction", "Transaction")</li>
                    <li>@Html.ActionLink("View Transactions", "Index", "Transaction")</li>
                    <li>@Html.ActionLink("View Products", "Index", "Product")</li>
                    <li>@Html.ActionLink("View Categories", "Index", "Category")</li>
                    <li>
                        <input type="submit" style="border-right:1px solid #333" class="btn btnSqr" onclick="location.href='@Url.Action("Index", "Manage")';return false;" value="Manage" />
                        <input class="btn btnSqr" type="submit" name="Logout" value="Log Out" />
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right mobileNav pull-right list-inline" style="display:flex;">
        <li >@Html.ActionLink("Register", "RegisterRequest", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}