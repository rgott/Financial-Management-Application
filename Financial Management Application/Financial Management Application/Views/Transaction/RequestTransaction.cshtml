@model Financial_Management_Application.Models.TransactionVM.RequestTransactionViewModel

@Scripts.Render("~/Scripts/Transaction_Page.js")
<h2>Request Form</h2>



<div class="container">
    <div class="col-xs-6">
        <h3>My Cart</h3>
        <table id="myCart" class="table" style="float:left">
            <thead>
                <tr>
                    <th>Cart Id</th>
                    <th>P Name</th>
                    <th>p price</th>
                    <th>purch date</th>
                    <th>quantity</th>
                    <th>unit price</th>
                </tr>
                <tr></tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SelectedProductTable.Count; i++)
                {
                    <tr>
                        <td>@Model.SelectedProductTable[i].cartId</td>
                        <td>@Model.SelectedProductTable[i].purchaseDate</td>
                        <td>@Model.SelectedProductTable[i].quantity</td>
                        <td>@Model.SelectedProductTable[i].unitPrice</td>
                    </tr>
                }
</tbody>
        </table>
    </div>
</div>
<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
    <input type="hidden" name="cmd" value="_s-xclick">
    <input type="hidden" name="hosted_button_id" value="7NPC4F53SQRK2">
    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
    <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>
<br/>
<br/>

<div class="container" >
    <form action="#" method="get" onsubmit="return false" style="z>
        <label for="q">Enter your Search Term:</label>
        <input type="text" class="form-control" size="30" name="q" id="searchTerm" value="" onkeyup="doSearch()"/>

    </form>
    <br />
    <table class="table" id="datatable" style="float:left">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        
          

            @for (int i = 0; i < Model.ProductTable.Count; i++)
            {
                using (Html.BeginForm("RequestTransaction", "Transaction", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
                {
                    <tr>
                        <td>@i</td>
                        <td>@Html.DisplayFor(m => m.ProductTable[i].Category.name)</td>
                        <td>@Html.DisplayFor(m => m.ProductTable[i].price)</td>
                        
                        <td>@Html.TextBoxFor(m => m.quantity)</td>
                        <td>
                            <div class="form-group">
                                @Html.Hidden("productId", Model.ProductTable[i].Id)
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Add" />
                                </div>
                            </div>
                        </td>

                    </tr>
                }

            }
        </tbody>
    </table>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
}